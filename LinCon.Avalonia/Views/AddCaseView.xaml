<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="LinCon.Avalonia.Views.AddCaseView">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical" Spacing="4">
       <TextBlock>Name</TextBlock>
       <TextBox Text="{Binding Name, Mode=TwoWay}"/>
       <StackPanel Orientation="Horizontal">
            <Button Command="{Binding AddLinkCommand}">Add</Button>
            <Button Command="{Binding ReturnCommand}">Cancel</Button>
       </StackPanel>
    </StackPanel>
</UserControl>