<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:rxui="clr-namespace:Avalonia;assembly=Avalonia.ReactiveUI"
             x:Class="LinCon.Avalonia.Views.CaseView">
    <UserControl.Styles>
        <Style Selector="Button">
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.greenBtn">
            <Setter Property="Background" Value="#00796B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20 10 20 10"/>
        </Style>
        <Style Selector="Button.greenBtn /template/ ContentPresenter">
            <Setter Property="CornerRadius" Value="0 30 0 30"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style Selector="Button.defaultBtn">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Padding" Value="20 10 20 10"/>
        </Style>
        <Style Selector="Button.defaultBtn /template/ ContentPresenter">
            <Setter Property="CornerRadius" Value="0"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style Selector="Button.redBtn">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="Red"/>
            <Setter Property="Padding" Value="20 10 20 10"/>
        </Style>
        <Style Selector="Button.redBtn /template/ ContentPresenter">
            <Setter Property="CornerRadius" Value="0"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </UserControl.Styles>
        <Grid>
            <Border Padding="15" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid RowDefinitions="130 *">
                    <StackPanel Spacing="15" Orientation="Vertical">
                        <StackPanel Orientation="Horizontal" Spacing="15">
                            <Button Width="50" Height="50" Command="{Binding ReturnCommand}">
                                <Button.Template>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Path RenderTransformOrigin="0.5 0.5" Fill="Black" Data="M34.52 239.03L228.87 44.69c9.37-9.37 24.57-9.37 33.94 0l22.67 22.67c9.36 9.36 9.37 24.52.04 33.9L131.49 256l154.02 154.75c9.34 9.38 9.32 24.54-.04 33.9l-22.67 22.67c-9.37 9.37-24.57 9.37-33.94 0L34.52 272.97c-9.37-9.37-9.37-24.57 0-33.94z">
                                            <Path.RenderTransform>
                                                <ScaleTransform ScaleX="0.09" ScaleY="0.09"/>
                                            </Path.RenderTransform>
                                        </Path>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <TextBlock FontSize="30" Text="{Binding Case.Name}" Foreground="#0D47A1"/>
                        </StackPanel>
                        <StackPanel Margin="15 0 0 0" Orientation="Horizontal" Spacing="15">
                            <Button Classes="greenBtn" Command="{Binding AddLinkCommand}">Add Link</Button>
                            <Button Classes="defaultBtn" Command="{Binding OpenAllLinksCommand}">Open links</Button>
                            <Button Classes="redBtn" Command="{Binding DeleteManyLinksCommand}">Delete Links</Button>
                        </StackPanel>
                    </StackPanel>
                    <Grid Grid.Row="1">
                        <ScrollViewer Padding="0 0 10 0">
                            <ItemsControl Items="{Binding Case.Links}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="0 20 0 0" Padding="20 10 20 10"  Background="White" CornerRadius="10">
                                            <Grid Margin="40 0 40 0" HorizontalAlignment="Stretch">
                                                <TextBlock FontSize="30" VerticalAlignment="Center" Foreground="#212121" Text="{Binding Name}"/>
                                                <StackPanel HorizontalAlignment="Right" Spacing="15" Orientation="Horizontal">
                                                   <Button FontSize="30" Classes="defaultBtn" Foreground="Green" CommandParameter="{Binding }" Command="{Binding $parent[ItemsControl].DataContext.OpenLinkCommand}">Open</Button>
                                                   <Button FontSize="30" Classes="defaultBtn" CommandParameter="{Binding }" Command="{Binding $parent[ItemsControl].DataContext.EditLinkCommand}">Edit</Button>
                                                   <Button FontSize="30" Classes="defaultBtn" Foreground="Red" CommandParameter="{Binding }" Command="{Binding $parent[ItemsControl].DataContext.DeleteLinkCommand}">Delete</Button>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </Border>
            <rxui:RoutedViewHost Router="{Binding Router}"/>
        </Grid>
</UserControl>