<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="LinCon.Avalonia.Views.DeleteCaseView">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical" Spacing="4">
       <StackPanel Orientation="Horizontal">
          <TextBlock>Are you sure you want to delete this Case with every link contained in it </TextBlock>
          <TextBlock Text="{Binding Case.Name}"/>
          <TextBlock>?</TextBlock>
       </StackPanel>
       <StackPanel Orientation="Horizontal">
          <Button Command="{Binding DeleteCommand}">Delete</Button>
          <Button Command="{Binding ReturnCommand}">Cancel</Button>
       </StackPanel>
    </StackPanel>
</UserControl>