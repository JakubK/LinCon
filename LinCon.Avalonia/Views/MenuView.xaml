<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="LinCon.Avalonia.Views.MenuView">
    <StackPanel MinWidth="300" MaxWidth="600"
            VerticalAlignment="Center"
            Spacing="30">
        <Button Classes="menuItem" Background="#00796B"  Command="{Binding RouteCaseExplorer}">View Cases</Button>
        <Button Classes="menuItem" Command="{Binding RouteCaseImport}">Import Case</Button>
        <Button Classes="menuItem" Command="{Binding RouteCaseExport}">Export Case</Button>
    </StackPanel>
</UserControl>